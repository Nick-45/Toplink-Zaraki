# Database
DATABASE_URL="postgresql://toplink:password@localhost:5432/toplink?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"

# Redis
REDIS_URL="redis://localhost:6379"

# SMS Gateway (Africa's Talking)
SMS_API_KEY="your-africas-talking-api-key"
SMS_API_SECRET="your-africas-talking-api-secret"
SMS_SENDER_ID="TOPLINK"

# File Upload
UPLOAD_PATH="./uploads"
MAX_FILE_SIZE=10485760

# App
NODE_ENV="development"
PORT=5000
FRONTEND_URL="http://localhost:3000"

# Cloud Storage (AWS S3)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
S3_BUCKET_NAME="toplink-files"
